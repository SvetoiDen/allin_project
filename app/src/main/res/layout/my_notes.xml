<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6357F4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="#6357F4">

            <TextView
                android:id="@+id/notes_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_notes_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Title 1"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                app:layout_constraintStart_toEndOf="@+id/notes_id_1"
                app:layout_constraintTop_toTopOf="@+id/notes_id_1" />

            <TextView
                android:id="@+id/name_desc_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author1"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="@+id/name_notes_2"
                app:layout_constraintTop_toBottomOf="@+id/name_notes_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>